{% extends 'base.html.twig' %}

{% block title %}Liste des matchs
{% endblock %}

{% block main %}
	<div class="container mt-5">
		<div class="card shadow">
			<div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
				<h2 class="mb-0">
					Liste des matchs</h2>
				<a href="{{ path('add_game') }}" class="btn btn-light">
					Créer un nouveau match
				</a>
			</div>
			<div class="card-body">
				{% if games is empty %}
					<div class="alert alert-info">
						<strong>
							Aucun match enregistré pour le moment.</strong>
						<br>Commencez par
						<a href="{{ path('add_game') }}">ajouter un match</a>
					</div>
				{% else %}
					<div class="table-responsive">
						<table class="table table-striped table-hover">
							<thead class="table-dark">
								<tr>
									<th>Date</th>
									<th>Équipe domicile</th>
									<th>Équipe extérieur</th>
									<th>Stade</th>
									<th>Compétition</th>
									<th>Modier</th>
									<th>Supprimer</th>
								</tr>
							</thead>
							<tbody>
								{% for game in games %}
									<tr>
										<td>{{ game.date|date('d/m/Y') }}</td>
										<td>
											<strong>{{ game.homeTeam }}</strong>
										</td>
										<td>{{ game.awayTeam }}</td>
										<td>{{ game.stadium }}</td>
										<td>
											<span class="badge bg-primary">{{ game.competition }}</span>
										</td>
										<td>
											<a href="game/edit/{{game.id}}" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a>
										</td>
										<td>
											<a href="game/delete/{{game.id}}" class="btn btn-danger"><i class="bi bi-trash"></i></a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
