{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .contact-hero {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        color: white;
        padding: 80px 0;
        text-align: center;
        border-radius: 0 0 50px 50px;
        margin-bottom: 60px;
    }
    
    .contact-hero h1 {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 10px;
    }
    
    .contact-hero h2 {
        font-size: 1.8rem;
        font-weight: 300;
        margin: 0;
    }
    
    .contact-container {
        max-width: 700px;
        margin: 0 auto;
        padding: 50px 40px;
        background: white;
        border-radius: 30px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.08);
    }
    
    .form-group {
        margin-bottom: 25px;
    }
    
    .form-label {
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
        font-size: 1.1rem;
        display: block;
    }
    
    .form-control, textarea {
        border-radius: 15px;
        border: 2px solid #e0e0e0;
        padding: 15px;
        transition: all 0.3s ease;
        font-size: 1rem;
        width: 100%;
        box-sizing: border-box;
    }
    
    .form-control:focus, textarea:focus {
        border-color: #fa709a;
        box-shadow: 0 0 0 0.2rem rgba(250, 112, 154, 0.25);
        outline: none;
    }
    
    textarea {
        min-height: 150px;
        resize: vertical;
        font-family: inherit;
    }
    
    .btn-submit {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        border: none;
        color: white;
        padding: 18px 40px;
        border-radius: 50px;
        font-size: 1.1rem;
        font-weight: bold;
        transition: all 0.3s ease;
        width: 100%;
        cursor: pointer;
        margin-top: 10px;
    }
    
    .btn-submit:hover {
        transform: scale(1.02);
        box-shadow: 0 6px 20px rgba(250, 112, 154, 0.4);
    }
</style>
{% endblock %}

{% block main %}
<div class="contact-hero">
    <div class="container">
        <h1>{{ greeting() }}</h1>
        <h2>üìß Contactez-moi</h2>
    </div>
</div>

<div class="container my-5">
    <div class="contact-container">
        <form action="#" method="post">
            <div class="form-group">
                <label for="nom" class="form-label">Nom</label>
                <input type="text" class="form-control" id="nom" name="nom" placeholder="Votre nom" required>
            </div>
            
            <div class="form-group">
                <label for="prenom" class="form-label">Pr√©nom</label>
                <input type="text" class="form-control" id="prenom" name="prenom" placeholder="Votre pr√©nom" required>
            </div>
            
            <div class="form-group">
                <label for="email" class="form-label">E-mail</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="votre@email.com" required>
            </div>
            
            <div class="form-group">
                <label for="objet" class="form-label">Objet</label>
                <input type="text" class="form-control" id="objet" name="objet" placeholder="Sujet de votre message" required>
            </div>
            
            <div class="form-group">
                <label for="message" class="form-label">Message</label>
                <textarea class="form-control" id="message" name="message" placeholder="Votre message..." required></textarea>
            </div>
            
            <button type="submit" class="btn-submit">
                ‚úâÔ∏è Envoyer
            </button>
        </form>
    </div>
</div>
{% endblock %}