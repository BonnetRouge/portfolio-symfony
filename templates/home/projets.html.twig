{% extends 'base.html.twig' %}

{% block title %}Mes Projets{% endblock %}

{% block main %}
<div class="projects-hero">
    <h1>Mes Projets</h1>
    <p>D√©couvrez mes r√©alisations web</p>
</div>

<div class="container my-5">
    <div class="row g-4">
        {% for projet in projets %}
        <div class="col-md-4">
            <a href="{{ path('app_projet_detail', {category: projet.category}) }}" class="text-decoration-none">
                <div class="project-card h-100">
                    <div class="project-icon">
                        {% if projet.category == 'restaurant' %}üçΩÔ∏è
                        {% elseif projet.category == 'sport' %}‚öΩ
                        {% elseif projet.category == 'musique' %}üéµ
                        {% else %}üíª
                        {% endif %}
                    </div>
                    <div class="project-content">
                        <span class="project-badge">{{ projet.category }}</span>
                        <h5 class="project-title">{{ projet.title }}</h5>
                        <p class="project-desc">{{ projet.description }}</p>
                        <div class="project-techs">
                            {% for tech in projet.technologies|split(', ') %}
                                <span class="tech-tag">{{ tech }}</span>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="project-footer">
                        <span>Voir le projet ‚Üí</span>
                    </div>
                </div>
            </a>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .projects-hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        text-align: center;
        padding: 60px 20px;
        margin-bottom: 20px;
    }

    .projects-hero h1 {
        font-size: 2.8rem;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .projects-hero p {
        font-size: 1.2rem;
        opacity: 0.85;
    }

    .project-card {
        background: white;
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        border: 1px solid #f0f0f0;
    }

    .project-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 40px rgba(102, 126, 234, 0.25);
    }

    .project-icon {
        font-size: 3rem;
        margin-bottom: 15px;
    }

    .project-badge {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        text-transform: uppercase;
        font-weight: 600;
        letter-spacing: 1px;
    }

    .project-title {
        color: #2d3748;
        font-size: 1.2rem;
        font-weight: 700;
        margin-top: 12px;
        margin-bottom: 10px;
    }

    .project-desc {
        color: #718096;
        font-size: 0.9rem;
        line-height: 1.6;
        flex-grow: 1;
    }

    .project-techs {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
        margin-top: 15px;
    }

    .tech-tag {
        background: #f0f4ff;
        color: #667eea;
        padding: 3px 10px;
        border-radius: 20px;
        font-size: 0.78rem;
        font-weight: 500;
    }

    .project-footer {
        margin-top: 20px;
        padding-top: 15px;
        border-top: 1px solid #f0f0f0;
        color: #667eea;
        font-weight: 600;
        font-size: 0.9rem;
    }
</style>
{% endblock %}