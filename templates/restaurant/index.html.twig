{% extends 'base.html.twig' %}

{% block title %}Restaurant de David{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 80px 0;
        margin-bottom: 50px;
        border-radius: 0 0 50px 50px;
    }
    
    .menu-section {
        margin-bottom: 60px;
    }
    
    .menu-card {
        border: none;
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        height: 100%;
        background: white;
    }
    
    .menu-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }
    
    .menu-card-image {
        height: 220px;
        background-size: cover;
        background-position: center;
        position: relative;
        width: 100%;
    }
    
    .menu-card-image::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to bottom, transparent 50%, rgba(0,0,0,0.4) 100%);
    }
    
    .price-tag {
        position: absolute;
        top: 15px;
        right: 15px;
        background: white;
        color: #28a745;
        padding: 10px 18px;
        border-radius: 30px;
        font-weight: bold;
        font-size: 1.1rem;
        box-shadow: 0 3px 15px rgba(0,0,0,0.3);
        z-index: 1;
    }
    
    .card-body {
        padding: 25px;
        text-align: center;
    }
    
    .card-title {
        font-size: 1.3rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }
    
    .text-muted {
        color: #888 !important;
        font-size: 0.9rem;
    }
    
    .section-title {
        font-size: 2.5rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 40px;
        position: relative;
        display: inline-block;
    }
    
    .section-title::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 0;
        width: 60%;
        height: 4px;
        background: linear-gradient(to right, #667eea, #764ba2);
        border-radius: 2px;
    }
    
    .cta-button {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 18px 50px;
        font-size: 1.2rem;
        border-radius: 50px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        color: white;
        text-decoration: none;
    }
    
    .cta-button:hover {
        transform: scale(1.05);
        box-shadow: 0 6px 25px rgba(102, 126, 234, 0.6);
        color: white;
    }
</style>
{% endblock %}

