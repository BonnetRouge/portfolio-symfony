{% extends 'base.html.twig' %}

{% block main %}
    <div class="container mt-5" style="max-width: 400px;">
        <h2>Connexion</h2>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey }}</div>
        {% endif %}

        <form method="post">
            <div class="mb-3">
                <label for="email">Email</label>
                <input type="email" id="email" name="_username"
                       value="{{ last_username }}" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="_password"
                       class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Se connecter</button>
        </form>

        <p class="mt-3">Pas encore de compte ?
            <a href="{{ path('register') }}">S'inscrire</a>
        </p>
    </div>
{% endblock %}